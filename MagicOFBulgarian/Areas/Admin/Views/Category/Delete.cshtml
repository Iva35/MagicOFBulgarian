@model Category

<form method="post">
	<input asp-for="CategoryId" hidden/>

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Изтрий категорията</h2>

		</div>

		<input asp-for="DisplayOrder" value="1" hidden class="form-control" />

		<div class="mb-3 row p-1">
			<label asp-for="CategoryName" class="p-0">Име на категорията</label>
			<input asp-for="CategoryName" disabled class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Изтрий</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary boarder form-control">
					Върни се
				</a>
			</div>
		</div>


	</div>
</form>
