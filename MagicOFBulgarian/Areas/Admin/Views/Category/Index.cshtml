@model List<Category>


	<div class="container">

		<div class="row pt-4 pb-3">
			<div class="col-6">
				<h2 class="text-primary">
					Категории
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle-dotted"></i> Създай нова  категория
				</a>
			</div>
		</div>
<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>
			
		</th>
	</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
		{	
			<tr>
			<td>@obj.CategoryName</td>
			<td>
				<div class="group-of-btns" role="group">
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Редактирай
					</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
								<i class="bi bi-trash3-fill"></i> Изтрий
							</a>
				</div>
			</td>
			</tr>
		}
	</tbody>
</table>
</div>